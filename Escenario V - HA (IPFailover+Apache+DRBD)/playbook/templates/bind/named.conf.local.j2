//

// Consider adding the 1918 zones here, if they are not used in your
// organization
include "/etc/bind/zones.rfc1918";

zone "{{ dominio }}" {
	type master;
	file "/var/lib/bind/db.{{ dominio }}";
	allow-transfer { any; };
	allow-query { any; };
};

zone "{{ inversa }}" {
	type master;
	file "/var/lib/bind/db.{{ red }}";
	allow-transfer { any; };
	allow-query { any; };
};


